.button {
  position: absolute;
  bottom: 0;
  width: 100%;
}
.danmu{
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
}
.danmu-box {
  position: absolute;
  /* 防止向下换行*/
  white-space: nowrap;
  background-color: rgba(0, 0, 0, 0.1);
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  color: #fff;
  display: flex;
  align-items: center;
}
/*点赞*/
.gift-like{
  width: 40rpx;
  height: 40rpx;
}
.danmu-text{
  padding-left: 20rpx;
  font-size: 28rpx;
}

.font-bold{
  font-size: 30rpx;
}
.font-small{
  font-size: 26rpx;
}
.fix-bottom{
  position: fixed;
  bottom: 20rpx;
  left: 170rpx;
}
/**定义从右边向左边的移动的动画**/
@keyframes first {
  from {
    left: 100%;
  }

  to {
    left: -100%;
  }
}
